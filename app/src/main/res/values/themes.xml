<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParkSpace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peaceful_river</item>
        <item name="colorPrimaryVariant">@color/sapphire_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="bg">@color/lynx_white</item>
        <item name="mainbackground">@color/frozen</item>
        <item name="boldText">@color/black</item>
        <item name="maintextbold">@color/black</item>
        <item name="mediumText">@color/supernatural</item>
        <item name="maintextmedium">@color/british_shorthair</item>
        <item name="regularText">@color/moroccan_dusk</item>
        <item name="typing">@color/mortar_grey</item>
        <item name="appbar">@color/lynx_white</item>
        <item name="card">@color/white</item>
        <item name="field">@color/white</item>
        <item name="invers_bg">@color/pixel_white</item>
        <item name="inactivetab">@color/shark_fin</item>
        <item name="mainbg">@color/frozen</item>
        <item name="strokeField">@color/silver_polish</item>
        <item name="cardmain">@color/bluish_cyan</item>
        <item name="cardticket">@color/white</item>
        <item name="mainfoot">@color/tealish_blue</item>
        <item name="mainbutton">@color/orange_yellow</item>
        <item name="floorbg">@color/deap_sea_blue</item>
        <item name="bgcf">@color/supernatural</item>
        <item name="activetext">@color/bluish_cyan</item>
        <item name="inactivetext">@color/glacier</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/peaceful_river</item>
        <item name="colorSecondaryVariant">@color/sapphire_blue</item>
        <item name="colorOnSecondary">@color/sapphire_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/frozen</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
    </style>

    <style name="tablayText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottomsheet</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
</resources>